   name=Whonix-Gateway
elif test -f /usr/share/anon-ws-base-files/workstation ; then
   name=Whonix-Workstation
elif test -f /usr/share/whonix-libvirt/marker ; then
   name=Whonix-Host
fi

echo "Welcome to $name â„¢!"
